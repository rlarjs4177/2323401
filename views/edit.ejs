<!-- edit.ejs -->
<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>수정</title>
    <!-- 부트스트랩 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
  </head>
  <body>
    <%- include('menu.html') %> 
      <div class="container mt-4">
        <form action="/edit" method="post">
          <h1>블로그 수정 페이지</h1>
          
          <!-- 제목 입력 -->
          <div class="form-group">
            <label>제목</label>
            <input type="text" name="id" class="form-control" value="<%= data._id %>" style="display: none;">
            <input type="text" name="title" class="form-control" value="<%= data.title %>">
          </div><p></p>

          <!-- 내용 입력 -->
          <div class="form-group">
            <label>내용</label>
            <textarea name="content" rows='10' class="form-control"><%= data.content %></textarea>
          </div><p></p>

          <!-- 작성일 입력 -->
          <div class="form-group">
            <label>작성일</label>
            <input type="date" class="form control" name="someDate" value="<%= data.date %>">
          </div><p></p>

          <!-- 수정 버튼 -->
          <button type="submit" class="btn btn-warning" style="float:right;">수정</button>
        </form>
      </div>
      
    <!-- 부트스트랩 JS -->  
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>    
  </body>
</html>


 