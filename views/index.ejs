<!-- index.ejs -->
<!DOCTYPE html>
<html lang="ko">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Blog</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    
</head>
<body>
    <%- include('menu.html') %> 
    <div class="container mt-5">
        <div class="text-center">
            <h1 class="display-3">환영합니다.</h1>
            <% if(user){ %>
                <!-- 로그인이 되어 있는 상태면 환영 메세지가 나오게 함 -->
                <h3 class="mt-3">반갑습니다. <%= user.userid %>님.</h3>
                <a href="/" class="btn btn-danger mt-3">로그아웃</a>
            <% } else { %>
                <!-- 로그인이 되어 있지 않으면 로그인 버튼과 회원가입 버튼 나오게 함 -->
                <h3 class="mt-3">로그인 해주세요.</h3>
                <!-- 로그인 버튼 -->
                <button class="w-100 btn btn-warning login mt-3"><b>로그인</b></button>
                <p></p>
                <!-- 회원가입 버튼 -->
                <button class="w-100 btn btn-success signup"><b>회원가입</b></button>
            <% } %>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4" crossorigin="anonymous"></script>
    <script>
        // 로그인 버튼 클릭 이벤트 처리 스크립트
        $('.login').click(function(e){
            location.href = "/login";       
        })

        // 회원가입 버튼 클릭 이벤트 처리 스크립트
        $('.signup').click(function(e){
            location.href = "/signup";       
        })
    </script>
</body>
</html>
